<% layout("layouts/boilerlplate") %>

<div class="row mt-3">
     <h4 class="col-6 offset-3">SignUp for wanderlust</h4>
  <div class="col-6 offset-3 ">
    <form method="post" action="/signUp " novalidate class="needs-validation">
      
      <label for="username" class="form-label">UserName </label><br />
      <input
        type="text"
        name="username"
        id="username"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Enter UserName</div>
      <br />
      <label for="password" class="form-label">Password</label><br />
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Enter Password </div>
      <br />
<label for="gamil" class="form-label">Gmail</label><br />
      <input
        type="text"
        name="gmail"
        id="gmail"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Enter Gmail</div>
      <br />
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
